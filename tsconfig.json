{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "target": "ES2019",
    "module": "ESNext",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noImplicitThis": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "vite/client"
    ]
  },
  "include": ["src/**/*", "mobile/**/*", "types/**/*.d.ts"]
}
